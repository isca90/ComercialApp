@model CommercialApp.Models.Transaction


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

    <div>
        <h4>Transaction</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TransactionId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TransactionId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateCreated)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateCreated)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.State)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.State)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ChangedBy)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ChangedBy)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Total)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Total)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Singular)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Singular.Name)
            </dd>
            <dt class="col-sm-2">
                Address
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Singular.Address) -  @Html.DisplayFor(model => model.Singular.PostalCode) -  @Html.DisplayFor(model => model.Singular.City)
            </dd>
            @foreach (CommercialApp.Models.TransactionDetail x in Model.TransactionDetails)
            {
                <dt class="col-sm-2">
                    Product
                </dt>
                <dd class="col-sm-10">
                    @x.Product.Name
                </dd>
                <dt class="col-sm-2">
                    Price Without Taxes
                </dt>
                <dd class="col-sm-10">
                    @x.Product.UnitPrice
                </dd>
                <dt class="col-sm-2">
                    Taxe Rate
                </dt>
                <dd class="col-sm-10">
                    @x.Product.TaxRate
                </dd>
                <dt class="col-sm-2">
                    Price With Taxes
                </dt>
                <dd class="col-sm-10">
                    @x.Product.GetPriceWithTax()
                </dd>



            }
        </dl>
    </div>

    <div>
        <a asp-action="Edit" asp-route-id="@Model.TransactionId">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</body>
</html>
