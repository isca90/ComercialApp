@model IEnumerable<CommercialApp.Models.Transaction>

@{
    ViewData["Title"] = "Index";
}
<br />

<h1>Orders that have products I supply</h1>
<br />
<div class="text-danger">
    @ViewBag.Error
</div>
@if (Model.Count() == 0)
{
    <p>There are still no sellings registered</p>
}
@foreach (CommercialApp.Models.Transaction item in Model)
{

    <table class="table">
        <thead>
            <tr>
                <th>
                    Date
                </th>
                <th>
                    State
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @item.DateCreated
                </td>
                <td>
                    @item.State
                </td>
                <td>
                    @Html.ActionLink("Details", "DetailsCompany", new { id = item.TransactionId })
                </td>
            </tr>

        </tbody>
    </table>

}

